<div id="signable">

  <!-- Background image from flickr:
  https://www.flickr.com/photos/nggalai/6052551793
  license: https://creativecommons.org/licenses/by/2.0/ -->
  <div id="transparency">
    <div id="sign-up-form">
    
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div>
          <%= f.email_field :email, autofocus: true, placeholder: "email address"%>
        </div>

        <div>
          <%= f.password_field :password, autocomplete: "off", placeholder: "password"%>
        </div>

        <div>
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "password confirmation"%>
        </div>

        <div>
          <%= f.submit "Sign Up" %>
        </div>
    <% end %>
    <!-- <%= render "devise/shared/links" %> -->
    </div>
  </div>
</div>